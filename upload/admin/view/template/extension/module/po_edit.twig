<div class="form-group" id="po-number-div">
    <label class="col-sm-2 control-label" for="po-number">{{ text_po }}</label>
    <div class="col-sm-10">
        <input type="text" name="po_number" id="input-payment-po-number" class="form-control" value="{{ po_number }}">
    </div>
</div>

<script type='text/javascript'>
$(document).ready(function (){
    if($('div#tab-payment').length) {
        var element = $('#po-number-div').detach();
        $('div#tab-payment').prepend(element);
    }
});
</script>